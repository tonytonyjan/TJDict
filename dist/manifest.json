{
  "name": "TJDict 線上字典",
  "short_name": "TJDict",
  "description": "免費英漢、漢英、英英、日日整合型網路字典，提供簡單的單字翻譯與解釋。目前支援的字典有 Yahoo 字典、句酷雙語例句、Urban Dictionary、Weblo、牛津字典、VoiceTube。",
  "version": "2.0.0",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "*://tw.dictionary.search.yahoo.com/*",
    "*://www.weblio.jp/content/*",
    "*://tw.voicetube.com/*",
    "*://www.urbandictionary.com/*",
    "*://www.lexico.com/*",
    "*://www.jukuu.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "TJDict"
  },
  "content_security_policy": "script-src 'self' https://*.google-analytics.com; object-src 'self';"
}
