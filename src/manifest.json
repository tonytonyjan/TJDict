{
  "name": "TJDict 線上字典",
  "short_name": "TJDict",
  "description": "TJDict 是一款方便快速的整合型網路字典，支援英漢、漢英、英英、日日，只要查詢一個單字，就能得到多本字典的查詢結果。再也不用開一堆分頁找單字，節省你的寶貴時間。",
  "version": "2.0.2",
  "manifest_version": 2,
  "permissions": [
    "notifications",
    "contextMenus",
    "*://tw.dictionary.search.yahoo.com/*",
    "*://www.weblio.jp/content/*",
    "*://tw.voicetube.com/*",
    "*://www.urbandictionary.com/*",
    "*://www.lexico.com/*",
    "*://www.jukuu.com/*",
    "*://dictionary.cambridge.org/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "TJDict"
  },
  "content_security_policy": "script-src 'self' https://*.google-analytics.com; object-src 'self';",
  "web_accessible_resources": ["index.html"]
}
