{
  "scripts": {
    "clean": "git clean -dfx dist",
    "start": "npm run clean && webpack --watch --mode development",
    "build": "npm run clean && webpack --mode production",
    "package:all": "BROWSER=chrome npm run package; BROWSER=firefox npm run package; BROWSER=edge npm run package",
    "package": "export BROWSER=${BROWSER:-chrome} && npm run build && mkdir -p pkg && cd dist && zip -r ../pkg/TJDict-$(node -e 'console.log(require(\"./manifest.json\").version)')-$BROWSER.zip .",
    "package:source": "mkdir -p pkg && git archive -o pkg/TJDict2-$(git rev-parse --short HEAD).source.zip HEAD",
    "server": "webpack-dev-server",
    "test": "karma start",
    "lint": "eslint src test",
    "storybook": "start-storybook --ci --port 9000",
    "version": "npx conventional-changelog-cli -p angular -c src/manifest.json -i CHANGELOG.md -s && git add CHANGELOG.md src/manifest.json"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-react": "^7.10.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
