{
  "name": "TJDict",
  "version": "0.3.8",
  "manifest_version": 2,
  "description": "英漢、漢英網路字典之整合字典",
  "permissions": [
    "<all_urls>",
    "contextMenus",
    "tabs",
    "storage",
    "notifications"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "options_page": "app/index.html#options",
  "app": {
    "launch": {
      "local_path": "app/index.html"
    }
  },
  "background": {
    "scripts": ["background/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/content.js"]
    }
  ],
  "web_accessible_resources": [
    "app/index.html",
    "img/icon48.png"
  ]
}